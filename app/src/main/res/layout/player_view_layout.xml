<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/color_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp"

        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/txt_colroname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Messi\n( Forward )"
        android:gravity="center"
        android:background="@color/fifalightgrey"
        android:textColor="@color/colorPrimary"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:padding="3dp"
        />

    <ImageView
        android:id="@+id/color_demo"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/txt_colroname"
        android:src="@drawable/argentina"
        android:orientation="horizontal"
        android:scaleType="fitXY"
        >

    </ImageView>

    <TextView
        android:id="@+id/txt_teamrankings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="23"
        android:layout_below="@+id/color_demo"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:fontFamily="serif-monospace"
        android:drawablePadding="3dp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/appearances"
        android:layout_toLeftOf="@+id/dummyMid"
        android:layout_margin="5dp"
        android:textSize="13sp"
        />
        <TextView
            android:id="@+id/dummyMid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/txt_teamwins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_below="@+id/color_demo"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:fontFamily="serif-monospace"
            android:drawableLeft="@drawable/goals"
            android:drawablePadding="3dp"
            android:layout_toRightOf="@+id/dummyMid"
            android:layout_margin="5dp"
            android:textSize="13sp"
            />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>